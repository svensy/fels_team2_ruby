
<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <div class="card word" style="  background-color: #36D7B7;">
    <%= form_for [current_user, @lesson] do |f| %>
      <%= f.fields_for :lesson_words do |lw_builder| %>
        <div >
          <div class="row answer-box">
            <% word = lw_builder.object.word %>
          
            <div class="col-md-5">
              <div style="font-size: 24px; color: green; "> <%= word.content %> </div>
            </div>

            <div class="col-md-6">
              
                <% word.word_answers.each do |answer| %>
                  <div class="radio">
                      <label> <%= lw_builder.radio_button :word_answer_id, answer.id %> <%= answer.content %> </label>
                   
                  </div>
                <% end %>
           
            </div>
          </div>
        </div>
      <% end %>
      
      <div style="clear: both;">
        <div style="float: right;">
        <%= f.submit "Submit", class: "btn btn-danger" %>
        </div>
      </div>
      <br>
      <br>
    <% end %> 
    </div>
  </div>

</div>