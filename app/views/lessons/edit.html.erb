<div class="row">
  <aside class="col-md-3">
    <%= render 'shared/user_profile' if current_user != nil %>
  </aside>
  
   <div class="col-md-7">
    <h2> Your Result: <%= @lesson.result %> </h2>
      <div class="card word" style="background-color: #36D7B7;">   

        <div class="row list-group" style="margin: 10px;">
        <% @lesson.lesson_words.each do |lw| %>

          <div class="col-md-5 list-group-item" >
            <%= lw.word.content %>
          </div>
          <div class="col-md-5 list-group-item" >
            <% if lw.word_answer != nil %>
              <%= lw.word_answer.content  %>
            <% elsif %>
              no answer
            <% end %>
          </div>
          <div class="col-md-2 list-group-item" >
            <% if lw.word_answer != nil %>
              <%= lw.word_answer.correct  %>
            <% elsif %>
              false
            <% end %>      
          </div>
        <% end %>
        </div>
      </div>
    </div>

</div>